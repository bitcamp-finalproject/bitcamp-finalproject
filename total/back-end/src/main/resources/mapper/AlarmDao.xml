	      <id column="member_no" property="no"/>
	      <result column="name" property="nickname"/>
	      <result column="filename" property="profilePhoto"/>
	    </association>
    </association>
     -->
      
  </resultMap>
  
  <select id="findAll" resultMap="alarmlogMap" parameterType="int">
		SELECT
			al.log_no,
			al.type_no,
			al.member_no,
			al.content,
			al.read_flag,
			al.alarm_dt,
			at.alarm_type,
			m.member_no as other_no,
			m.name,
			m.email,
			m.created_dt,
			m.gender,
			m.filename,
			m.addr,
			m.pt,
			m.info,
			m.birth_dt,
			m.tel,
			m.pw_update_dt,
			m.state,
			m.auth
		FROM 
		  aim_alarm_log al
	  JOIN
	    aim_alarm_type at ON al.type_no = at.type_no
		JOIN
		  aim_member m ON al.other_no = m.member_no
		WHERE 
		  al.member_no = #{no}
		ORDER BY
		  al.alarm_dt desc
  </select>


  </mapper>