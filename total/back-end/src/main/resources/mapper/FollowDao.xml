<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.app.dao.FollowDao">

  <resultMap type="follow" id="followMap">
    <id column="following_no" property="following_no"/>
    <id column="follower_no" property="follower_no"/>
  </resultMap>

  <select id="findAllFollowingNumbers" parameterType="int" resultType="java.lang.Integer">
    select
      follower_no
    from
      aim_follow 
    where
      following_no=#{following_no}
  </select>
  
  <select id="findAllFollowerNumbers" parameterType="int" resultType="java.lang.Integer">
    select
      following_no
    from
      aim_follow 
    where
      follower_no=#{follower_no}
  </select>

  </mapper>