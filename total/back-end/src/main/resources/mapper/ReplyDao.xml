<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.app.dao.ReplyDao">

  <resultMap type="reply" id="replyMap">
    <id column="reply_no" property="replyNo"/>
    <result column="board_no" property="boardNo"/>
    <result column="member_no" property="writerNo"/>
    <result column="content" property="content"/>
    <result column="write_dt" property="writeDt"/>
    <result column="name" property="writerName"/>
    <result column="filename" property="writerPic"/>
  </resultMap>
  
    <select id="findByNo" resultMap="replyMap" parameterType="int">
    select 
      r.reply_no, 
      r.board_no, 
      r.member_no, 
      r.content, 
      r.write_dt, 
      m.name, 
      m.filename 
    from 
      aim_reply r
      inner join aim_member m on m.member_no = r.member_no  
    where 
      r.board_no=#{no}
  </select>
  
  
  </mapper>